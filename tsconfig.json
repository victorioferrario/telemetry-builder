{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@telemetry-builder/telemetry-shell": [
        "libs/telemetry-shell/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false,
    "preserveWhitespaces": false,
    "strictMetadataEmit": false,
    "skipTemplateCodegen": true
  }
}
